<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:id="@+id/a_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:textSize="16sp"
        android:textColor="@color/article_list_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        />

    <TextView android:id="@+id/a_author"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:textSize="12sp"
        android:textColor="@color/article_list_time"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/a_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <TextView android:id="@+id/a_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:textSize="12sp"
        android:textColor="@color/article_list_time"
        android:layout_alignParentRight="true"
        android:layout_below="@id/a_name"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        />
    <TextView android:id="@+id/a_content"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:textSize="14sp"
        android:textColor="@color/article_list_title"
        android:layout_below="@id/a_time"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>